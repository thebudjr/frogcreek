<div class="container">
	<div class="row">
		<h1 class="text-center">Dashboard</h1>

		<div class="col-md-6">
			<h3 class="text-center">
				Pictures <%= link_to "New Picture", new_picture_path, class: "btn btn-primary btn-sm" %>
			</h3>
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Available</th>
					</tr>
				</thead>
				<tbody>
					<% @pictures.each do |pic| %>
						<tr>
							<td><%= pic.id %></td>
							<td><%= link_to pic.name, picture_path(pic) %></td>
							<td><%= pic.availability %></td>
							<td><%= link_to "Edit", edit_picture_path(pic) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

		<div class="col-md-6">
			<h3 class="text-center">
				Sales
			</h3>
		</div>

	</div>
</div>