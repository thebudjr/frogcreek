<div class="container">
  <div class="row">

    <div class="col-md-6">
      <%= image_tag @picture.image.url(:original), class: "img-responsive" %>
    </div>

    <div class="col-md-6">
      <h3><%= @picture.name %> by <%= @picture.photographer %></h3>
      <p class="justify"><%= @picture.description %></p>
      <h4 class="text-center"><%= @picture.size1 %> - $<%= @picture.price1.to_f / 100 %></h4>
      <h4 class="text-center"><%= @picture.size2 %> - $<%= @picture.price2.to_f / 100 %></h4>
      <h4 class="text-center"><%= @picture.size3 %> - $<%= @picture.price3.to_f / 100 %></h4>
    </div>

    <% if current_user.try(:admin?) %>
      <%= link_to 'Edit', edit_picture_path(@picture) %> | 
    <% end %>
    <%= link_to 'Back', pictures_path %>
  </div>
</div>
