<div class="container">
  <%= simple_form_for(@picture, html: {class: "form-signin"}) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :photographer, required: true, label: false, placeholder: "Photographer", input_html: {class: "form-control"} %>
    <%= f.input :category, :collection => [["Birds","Birds"],["Landscapes","Landscapes"],["Animals","Animals"],["Miscellaneous","Miscellaneous"]] %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control", rows: 5} %>
    <%= f.input :size1, required: true, label: false, placeholder: "Size 1", input_html: {class: "form-control"} %>
    <%= f.input :price1, required: true, label: false, placeholder: "Price 1", input_html: {class: "form-control"} %>
    <%= f.input :size2, required: true, label: false, placeholder: "Size 2", input_html: {class: "form-control"} %>
    <%= f.input :price2, required: true, label: false, placeholder: "Price 2", input_html: {class: "form-control"} %>
    <%= f.input :size3, required: true, label: false, placeholder: "Size 3", input_html: {class: "form-control"} %>
    <%= f.input :price3, required: true, label: false, placeholder: "Price 3", input_html: {class: "form-control"} %>

    <%= f.input :image %>

    <%= f.input :availability, required: false, label: "Available?" %>

    <% if current_user.try(:admin?) %>
      <%= f.button :submit, class: "btn btn-primary btn-block" %>
    <% end %>
  <% end %>
</div>